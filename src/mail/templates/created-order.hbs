<table>
  <thead>
    <tr>
      <th>
        Order Number
      </th>
      <th>
        Order Time
      </th>
      <th>
        Order Status
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        {{order.orderNo}}
      </td>
      <td>
        {{order.createdAt}}
      </td>
      <td>
        {{order.status}}
      </td>
    </tr>
  </tbody>
</table>

